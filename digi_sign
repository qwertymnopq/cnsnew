import java.security.*; 
import java.util.Base64; 
public class DigitalSignatureShort { 
public static void main(String[] args) throws Exception { 
String msg = "Hello"; 
// Generate RSA Key Pair 
KeyPair keyPair = KeyPairGenerator.getInstance("RSA").generateKeyPair(); 
// Sign with private key 
Signature sign = Signature.getInstance("SHA256withRSA"); 
sign.initSign(keyPair.getPrivate()); 
sign.update(msg.getBytes()); 
String signature = Base64.getEncoder().encodeToString(sign.sign()); 
// Verify with public key 
Signature verify = Signature.getInstance("SHA256withRSA"); 
verify.initVerify(keyPair.getPublic()); 
verify.update(msg.getBytes()); 
boolean valid = verify.verify(Base64.getDecoder().decode(signature)); 
System.out.println("Message: " + msg); 
System.out.println("Signature: " + signature); 
System.out.println("Valid? " + valid); 
} 
} 
